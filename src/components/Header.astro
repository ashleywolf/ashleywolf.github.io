---
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<div class="prompt">
			<a href="/" class="site-name">
				<span class="user">ashleywolf</span><span class="at">@</span><span class="host">dev</span><span class="colon">:</span><span class="tilde">~</span><span class="dollar">$</span>
			</a>
			<span class="cursor">â–Š</span>
		</div>
		<div class="internal-links">
			<HeaderLink href="/">~/home</HeaderLink>
			<HeaderLink href="/blog">~/blog</HeaderLink>
			<HeaderLink href="/about">~/about</HeaderLink>
		</div>
		<div class="social-links">
			<a href="https://github.com/ashleywolf" target="_blank" title="GitHub">
				<span class="sr-only">Ashley's GitHub</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="24" height="24"
					><path
						fill="currentColor"
						d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
					></path></svg
				>
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1.5em;
		background: var(--color-bg-card);
		border-bottom: 1px solid var(--color-border);
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 760px;
		margin: 0 auto;
	}
	.prompt {
		display: flex;
		align-items: center;
		gap: 0.3em;
	}
	.site-name {
		font-family: var(--font-mono);
		font-size: 0.95em;
		text-decoration: none !important;
	}
	.user { color: var(--color-neon); }
	.at { color: var(--color-text-muted); }
	.host { color: var(--color-cyan); }
	.colon, .tilde { color: var(--color-text-muted); }
	.dollar { color: var(--color-text-muted); margin-left: 0.2em; }
	.cursor {
		color: var(--color-neon);
		font-size: 0.9em;
	}
	.internal-links {
		display: flex;
		gap: 0.25em;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--color-text-muted);
		text-decoration: none;
		font-family: var(--font-mono);
		font-size: 0.85em;
		transition: color 0.2s ease;
	}
	nav a:hover {
		color: var(--color-neon);
		text-decoration: none;
	}
	.social-links,
	.social-links a {
		display: flex;
		align-items: center;
	}
	.social-links a {
		padding: 0.75em 0.25em;
		color: var(--color-text-muted);
	}
	.social-links a:hover {
		color: var(--color-neon);
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
		.prompt {
			display: none;
		}
	}
</style>
